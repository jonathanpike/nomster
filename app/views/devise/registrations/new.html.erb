<div class = "booyah-box col-xs-10 col-xs-offset-1">
<h2>Sign up</h2>
<br />
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, placeholder: "john@smith.com", error: "E-mail is required, please specify one" %>
    <%= f.input :password, required: true, placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), error: "Password is too short (#{@minimum_password_length} characters minimum)" %>
    <%= f.input :password_confirmation, required: true, error: "Passwords do not match" %>
  </div>
  <br />
  <div class="form-actions">
    <%= f.button :submit, "Sign up", :class => 'btn btn-primary' %>
  </div>
<% end %>
<br />
<%= render "devise/shared/links" %>
</div>