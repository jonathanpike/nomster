<div class = "booyah-box col-xs-10 col-xs-offset-1">
  <h1>Enter Your Place Details</h1>
  <%= simple_form_for @place do |f| %>
    <%= f.input :name, error: "Place name is required, please specify one (3 characters minimum)", placeholder: "3 characters minimum" %>
    <%= f.input :address, error: "Address is required, please specify one"%>
    <%= f.input :description, error: "Description is required, please specify one" %>
    <br />
    <%= f.submit 'Create', :class => 'btn btn-primary' %>
  <% end %>
</div>